  <%if(error) { %>
    <div role="alert" style="text-align:center;margin-top:10px;color:red">
      <span><%= error %></span>
    </div>
  <% } %>


  <%if(success) { %>
    <div role="alert" style="text-align:center;margin-top:10px;color:green">
      <span><%= success %></span>
    </div>
  <% } %>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-8">
        <form class="form-signin" method="post" action="/deploy/masternode" >
          <img class="mb-4" src="../images/anon.png" alt="" width="100" height="100">
          <h1 class="h3 mb-3 font-weight-normal">Make your masternode</h1>
          <label for="inputEmail" class="sr-only">TX HASH</label>
          <input id="inputEmail" class="form-control" placeholder="TX HASH" name="masternodeprivkey" value="edvs" autofocus hidden>
          <!-- <label for="user" class="sr-only">UserId</label>
          <input name="owner" id="inputPassword" class="form-control" placeholder="UserId" required value=<%#= user.email%>>
          <label for="coin" class="sr-only">CoinType</label>
          <input name="coin" id="inputPassword" class="form-control" placeholder="Coin" required value=<%#= coins[0].id %>> -->
          <button class="btn btn-lg btn-primary btn-block mt-4" type="submit">Deploy!</button>
        </form>
      </div>
    </div>
  </div>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-8">
          <h1 class="h3 mb-3 font-weight-normal">Your Masternodes</h1>
          <table class="table">
              <thead>
                <tr>
                  <th scope="col">IP Address</th>
                  <th scope="col">Masternodes</th>
                </tr>
              </thead>
              <tbody>
                  <% masternodes.forEach(function (mn) { %>
                      <tr>
                          <td>XXX.XXX.XXX</td>
                        <td><%= mn.masternodeprivkey %></td>
                      </tr>
                  <% }) %>
              </tbody>
            </table>
      </div>
    </div>
  </div>

